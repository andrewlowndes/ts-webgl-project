    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": false,
    "target": "ES2016",
    "lib": ["DOM", "ES6"],
    "module": "commonjs"
  },
  "include": [
    "../src/**/*.ts"
  ],
  "exclude": [
    "../src/**/*.spec.ts"
  ]
}
